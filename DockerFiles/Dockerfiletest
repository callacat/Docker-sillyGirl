FROM node:alpine

ENV LANG=C.UTF-8

# 设置工作目录
WORKDIR /usr/local/sillyGirl

# 复制脚本文件
COPY monitorTest.sh /etc/sillyplus/monitor.sh

# 下载 sillyGirl 程序
RUN wget https://github.com/cdle/sillyGirl/releases/download/main/sillyGirl_linux_amd64 \
    && mv sillyGirl_linux_amd64 sillyGirl && chmod +x sillyGirl \
    && mkdir language plugins && chmod +x language plugins \
    && chmod +x /etc/sillyplus/monitor.sh \
    && mkdir /lib64 && ln -s /lib/libc.musl-x86_64.so.1 /lib64/ld-linux-x86-64.so.2 \
    && apk add --no-cache tzdata procps && cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime

VOLUME /etc/sillyplus

ENTRYPOINT ["/etc/sillyplus/monitor.sh"]