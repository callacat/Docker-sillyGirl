FROM node:apline

ENV LANG=C.UTF-8

# 设置工作目录
WORKDIR /usr/local/sillyGirl

# 复制脚本文件
COPY monitor.sh /usr/local/bin/monitor.sh

# 创建目录并创建软链接
RUN mkdir -p /usr/local/sillyGirl/plugins \
    && mkdir /usr/local/sillyGirl/language \
    && mkdir /etc/sillyplus \
    && ln -s /usr/local/sillyGirl/plugins /etc/sillyplus/plugins \
    && ln -s /usr/local/sillyGirl/language /etc/sillyplus/language

# 下载 sillyGirl 程序
RUN wget https://github.com/cdle/sillyGirl/releases/download/main/sillyGirl_linux_amd64 \
    && mv sillyGirl_linux_amd64 sillyGirl \
    && chmod +x sillyGirl && chmod +x /usr/local/bin/monitor.sh \
    && cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime

ENTRYPOINT ["/usr/local/bin/monitor.sh"]