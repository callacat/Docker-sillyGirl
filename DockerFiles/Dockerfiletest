FROM alpine:latest

# 设置工作目录
WORKDIR /usr/local/sillyGirl

# 复制文件
COPY monitorTest.sh /usr/local/bin/monitor.sh
COPY sillyGirl_linux_amd64 /usr/local/sillyGirl/sillyGirl

# 安装基础软件包并修改源
RUN apk update \
    && apk add --no-cache tzdata procps \
    && echo "http://mirrors.ustc.edu.cn/alpine/latest-stable/main" > /etc/apk/repositories \
    && echo "http://mirrors.ustc.edu.cn/alpine/latest-stable/community" >> /etc/apk/repositories \
    && apk update \
    && cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime \
    && rm -rf /var/cache/apk/* \
    && chmod +x /usr/local/bin/monitor.sh \
    && chmod +x /usr/local/sillyGirl/sillyGirl

# 默认映射目录
VOLUME /etc/sillyplus

ENTRYPOINT ["/usr/local/bin/monitor.sh"]
